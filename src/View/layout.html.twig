<!doctype html>
<html lang="fr" data-theme="light">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="icon" href="/assets/images/favicon_e_stoires.png">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css">
		<link rel="stylesheet" href="/assets/css/style.css">
		<link rel="stylesheet" href="/assets/css/style-desktop.css" media="screen and (min-width:655px)">
		<link rel="stylesheet" href="/assets/css/style-mobile.css" media="screen and (max-width:655px)">
		<title>E-STOIRES</title>
	</head>

	<body>
		{% block navbar %}
			<section id="navbar">
				<img id="logo-desktop" src="/assets/images/logo-desktop.png" alt="logo">
				<div id="logo-mobile">
					<p>E-STOIRES</p>
				</div>
				<nav>
					<ul>
						<li>
							<a href="/">ACCUEIL</a>
						</li>
						<span>|</span>

						<li>
							{% if user %}
								<a href="/stories/add">CRÉER</a>
							{% else %}
								<a href="/login">CRÉER</a>
							{% endif %}
						</li>
						<span>|</span>

						<div class="picto">
							<a href="/stories/add"><img src="/assets/images/pencil.png" class="picto-create" alt="picto crayon"></a>
						</div>

						<li>
							<a href="/stories/cooperate">CONTRIBUER</a>
						</li>
						<span>|</span>

						<div class="picto">
							<a href="/stories/cooperate"><img class="picto-contribute" src="/assets/images/contribute.png" alt="picto contribuer"></a>
						</div>

						<li>

							<a href="/stories/read">LIRE</a>

						</li>
						<span>|</span>

						<div class="picto">
							<a href="/stories/read"><img class="picto-read" src="/assets/images/open-book.png" alt="picto utilisateur"></a>
						</div>

						<li>
							<a href="/login">COMPTE</a>
						</li>

						<div class="picto">
							<a href="/login"><img class="picto-user" src="/assets/images/user.png" alt="picto utilisateur"></a>
						</div>
					</ul>
				</nav>
			</section>
		{% endblock %}

		{% block content %}{% endblock %}

		{% block footer %}
			<footer>
				<div class="grid">
					<div id="copyright">
						<p>&copy;2023 e-stoires</p>
					</div>

					<div class="social-networks">
						<a href="https://www.facebook.com/groups/aides.ecrivains"><img src="/assets/images/facebook.png" alt="logo facebook"></a>
					</div>

					<div class="social-networks">
						<a href="https://www.instagram.com/writecontrol/"><img src="/assets/images/instagram.png" alt="logo instagram"></a>
					</div>

					<div class="social-networks">
						<a href="https://www.twitter.com/"><img src="/assets/images/twitter.png" alt="logo twitter"></a>
					</div>

					<div class="social-networks">
						<a href="https://www.youtube.com/results?search_query=%C3%A9criture+collaborative"><img src="/assets/images/logoW.png" alt="logo youtube"></a>
					</div>

				</div>
			</footer>
		{% endblock %}
	</body>
</html>
