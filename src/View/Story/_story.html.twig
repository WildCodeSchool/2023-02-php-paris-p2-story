<div id="container">
	<div class="image">
		<img src="{{ story.picture }}" alt="coverture e-stoire">
	</div>
	<div class="story">
		<div class="title">
			<h2>{{ story.title }}</h2>
		</div>
		<div class="pseudo">
			<p>{{ story.pseudo }}</p>
		</div>
		<div class="chapter">
			<img src="/assets/images/list_chapters.png" alt="logo liste chapitres">
			<p>{{ story.nbchapter }}
				chapitres</p>
		</div>
		<div class="type_age">
			<div class="type">
				<p>{{ story.genre }}</p>
			</div>
			<div class="age">
				<p>{{ story.lectorat }}
					ans</p>
			</div>
		</div>
		<div class="description">
			<p>{{ story.description }}</p>
		</div>
		{% if story.ended %}
			<input type="submit" value="Lire" onclick="window.location.href='/stories/show?id={{ story.id }}'">
		{% else %}
			{% if user %}
				<input type="submit" value="Contribuer" onclick="window.location.href='/chapters/add?id={{ story.id }}'">
			{% else %}
				<input type="submit" value="Contribuer" onclick="window.location.href='/login'">
			{% endif %}
		{% endif %}
	</div>
</div>
