{% extends 'layout.html.twig' %}

{% block content %}
	<main id="read">

		{% include 'Story/_storyheader.html.twig' %}
		<section id="chapters">
			{% for chapter in chapters %}

				<hgroup class="chapter-title">
					<h3>
						{{ chapter.title }}
					</h3>
					<h4>
						{{ "Chapitre " ~ loop.index }}
					</h4>
				</hgroup>

				<div class="content">
					<p>
						{{ chapter.content }}
					</p>
				</div>

				<div class="author">
					<p>
						{{ "AuteurÂ·ice: #{chapter.pseudo}" }}
					</p>
				</div>

			{% endfor %}
		</section>

		<div id="read-buttons">
			<a href="/stories/read" role="button" class="outline" id="edit-button">Lire une autre e-stoire</a>
		</div>

	</main>
{% endblock %}
