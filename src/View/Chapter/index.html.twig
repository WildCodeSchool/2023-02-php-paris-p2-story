{% extends 'layout.html.twig' %}

{% block content %}
	<h1>stories</h1>
	<ul>
		{% for chapter in chapters %}
			<li>
				<a href="/chapters/show?id={{ chapter.id }}">{{ chapter.title }}</a>
			</li>
		{% else %}
			<li>Nothing to display</li>
		{% endfor %}
	</ul>
	<a href="/chapters/add">Ajouter</a>
{% endblock %}
